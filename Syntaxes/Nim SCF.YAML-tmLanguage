# [PackageDev] target_format: plist, ext: tmLanguage
---
name: Nim Source Code Filter
scopeName: source.nimscf
fileTypes: ["nimf"]
patterns:
  - begin: '^ *#'
    end: '^(?! *#)'
    patterns:
      - match: '(end) (proc|func|method|template|macro|iterator|converter)\b'
        captures:
          '1': {name: keyword.control.nimscf}
          '2': {name: storage.type.function.nimscf}
      - include: '#main'

repository:
  main:
    patterns:
      - include: '#type-defs'
      - include: '#const-defs'
      - include: '#var-let-using-defs'
