  doc-comments:
    patterns:
      - include: '#block-doc-comments'
      - include: '#line-doc-comments'

  block-doc-comments:
    patterns:
      - match: '^ *#'
      - begin: '##\['
        beginCaptures:
          '0': {name: punctuation.definition.comment.begin.nimscf}
        end: '^(?! *#)|]##'
        endCaptures:
          '0': {name: punctuation.definition.comment.end.nimscf}
        name: comment.block.documentation.nimscf
        patterns:
          - include: '#block-doc-comments'

  line-doc-comments:
    patterns:
      - match: '^ *#'
      - begin: '##'
        beginCaptures:
          '0': {name: punctuation.definition.comment.nimscf}
        end: '^(?! *#)|^(?! *#)|$\n?'
        name: comment.line.documentation.nimscf

  comments:
    patterns:
      - include: '#block-comments'
      - include: '#line-comments'

  block-comments:
    patterns:
      - match: '^ *#'
      - begin: '#\['
        beginCaptures:
          '0': {name: punctuation.definition.comment.begin.nimscf}
        end: '^(?! *#)|]#'
        endCaptures:
          '0': {name: punctuation.definition.comment.end.nimscf}
        name: comment.block.number-sign.nimscf
        patterns:
          - include: '#block-comments'

  line-comments:
    patterns:
      - match: '^ #'
      - begin: '(#)(?: *(TODO|todo)\b)?'
        beginCaptures:
          '1': {name: punctuation.definition.comment.nimscf}
          '2': {name: invalid.deprecated.nimscf}
        end: '^(?! *#)|$\n?'
        name: comment.line.number-sign.nimscf

  brackets:
    patterns:
      - include: '#square-brackets'
      - begin: '\{'
        beginCaptures:
          '0': {name: punctuation.section.braces.begin.nimscf}
        end: '^(?! *#)|}'
        endCaptures:
          '0': {name: punctuation.section.braces.end.nimscf}
        name: meta.braces.nimscf
        patterns:
          - include: '#main'

      - begin: '\('
        beginCaptures:
          '0': {name: punctuation.section.parens.begin.nimscf}
