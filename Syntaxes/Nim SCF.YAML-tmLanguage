      - begin: '([Rr])(")'
        beginCaptures:
          '1': {name: storage.type.string.nimscf}
          '2': {name: string.quoted.double.nimscf punctuation.definition.string.begin.nimscf}
        end: ^(?! *#)|(")|(\n)
        endCaptures:
          '1': {name: string.quoted.double.nimscf punctuation.definition.string.begin.nimscf}
          '2': {name: invalid.illegal.nimscf}
        contentName: string.quoted.double.nimscf
        patterns:
          - include: '#interpolation'
      - begin: '"'
        beginCaptures:
          '0': {name: punctuation.definition.string.begin.nimscf}
        end: ^(?! *#)|(")|(\n)
        endCaptures:
          '1': {name: string.quoted.double.nimscf punctuation.definition.string.begin.nimscf}
          '2': {name: invalid.illegal.nimscf}
        name: string.quoted.double.nimscf
        patterns:
          - match: '\\(?:[ABCEFLNPRTVabceflnprtv"''\\]|\d+|[Xx]\h{2}|[Uu](?:\h{4}|\{\h+}))'
            name: constant.character.escape.nimscf
          - match: \\
            name: invalid.illegal.lone-escape.nimscf
          - include: '#interpolation'

  interpolation:
    patterns:
      - match: '(`) *(?:[A-Za-z\x80-\xff](?:_?[\dA-Za-z\x80-\xff])*|_) *(`)'
