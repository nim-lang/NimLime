  punctuations:
    patterns:
      - match: ';'
        name: punctuation.terminator.statement.nimscf
      - match: ','
        name: punctuation.separator.nimscf
      - match: ':'
        name: punctuation.section.block.begin.nimscf
      - match: '\.(?![-=+*/<>@$~&%|!?^.:\\∙∘×★⊗⊘⊙⊛⊠⊡∩∧⊓±⊕⊖⊞⊟∪∨⊔])'
        name: punctuation.accessor.dot.nimscf
      - match: '(\*) *(:|(?=,|#|\{\.))'
        captures:
          '1': {name: storage.modifier.nimscf}
          '2': {name: punctuation.separator.annotation.nimscf}
      - match: '\)|]|}'
        name: invalid.illegal.nimscf

  for-stmts:
    patterns:
      - begin: for\b
        beginCaptures:
          '0': {name: keyword.control.loop.for.nimscf}
        end: ^(?! *#)|(in\b)|(?=[^#,{_`A-Za-z\x80-\xff\s])
        endCaptures:
          '1': {name: keyword.control.loop.for.in.nimscf}
        patterns:
          - begin: \(
            beginCaptures:
              '0': {name: punctuation.section.parens.begin.nimscf}
            end: '^(?! *#)|(in\b)|(\))|(?=[^#,{_`A-Za-z\x80-\xff\s])'
            endCaptures:
              '1': {name: keyword.control.loop.for.in.nimscf}
              '2': {name: punctuation.section.parens.end.nimscf}
            patterns:
              - include: '#for-stmt-1'
          - include: '#for-stmt-1'

  for-stmt-1:
    patterns:
